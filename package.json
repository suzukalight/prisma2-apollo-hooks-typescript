{
  "name": "prisma2-apollo-hooks-typescript",
  "version": "1.0.0",
  "main": "index.js",
  "author": "suzukalight <mail@mkubara.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "src/*"
    ],
    "nohoist": [
      "**/react-scripts",
      "**/react-scripts/**",
      "**/@generated",
      "**/@generated/**"
    ]
  },
  "devDependencies": {
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/client/src/**/*.{js,jsx}": [
      "prettier",
      "eslint --fix",
      "git add"
    ],
    "./src/server/src/**/*.{js,jsx}": [
      "prettier",
      "eslint --fix",
      "git add"
    ]
  }
}
